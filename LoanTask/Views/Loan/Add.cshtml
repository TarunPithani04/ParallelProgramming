@model Repository.Models.LoanMVC

@{
    ViewData["Title"] = "CreateLoan";
}

<h1>Create Loan</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" onsubmit="return validateForm()" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanRequest" class="control-label">Loan Request:</label>
                <input asp-for="LoanRequest" class="form-control" required />
                <span asp-validation-for="LoanRequest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount:</label>
                <input asp-for="Amount" class="form-control" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label">Phone Number:</label>
                <input asp-for="PhoneNo" class="form-control" required />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                <span id="mobileError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span id="emailError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (Model != null && !string.IsNullOrEmpty(Model.WaringMessage))
            {
                <span class="text-danger">@Model.WaringMessage</span>
            }
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
